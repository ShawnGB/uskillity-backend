%section
  #header.mainpage
    #main-carousel.owl-carousel
      %div.slide.slide-1
        .overlay
          %h1 u/music
          %h2 learn how to play piano
      %div.slide.slide-2
        .overlay
          %h1 u/skate
          %h2 learn new skateboarding tricks
      %div.slide.slide-3
        .overlay
          %h1 u/write
          %h2 write your first novel
      %div.slide.slide-4
        .overlay
          %h1 u/bake
          %h2 surprise your friends with tasty cookies
.container
  .row.row-centered
    %section
      %h1.section-heading Browse our collection of workshops
      .row
        = render partial: 'workshops/workshop', collection: @workshops
  .row.row-centered
    %section
      %h1.section-heading Browse our categories
      .row
        = render partial: 'categories/category', collection: @categories
  .row.attach-to-top
    %section.primary
      %h1.section-heading The Product
      %h3 This is us.
      %h3 This is what we do.
      %h3 This is why it is important for you to join us.
      %h3 This is how we, together with you, are going to change the way we are learning.
  .row.attach-to-top
    %section.darkgrey
      %h1.section-heading How it works
      .col-sm-6.col-sm-offset-3
        #switch-slides.btn-group.btn-group-justified
          .btn-group
            %button#learn_click.btn.btn-default.btn-lg.btn-block.active{"data-toggle" => "button", :type => "button"} Learn
          .btn-group
            %button#offer_click.btn.btn-default.btn-lg.btn-block{:type => "button"} Offer
      #learn-slide.col-sm-10.col-sm-offset-1.switch-slide
        %p Learn a Skill
      #offer-slide.col-sm-10.col-sm-offset-1.switch-slide
        %p Share a Skill, Offer a workshop
