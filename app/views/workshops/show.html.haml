.row
  .col-md-8
    .workshop-details-header
      = image_tag @workshop.main_image, class: "img-responsive"
      %h1.workshop-title= @workshop.title
      %h2.workshop-subtitle= @workshop.subtitle
  .col-md-4
    .workshop-user-profile
      .user-image
        = image_tag @workshop.provider.image, class: "center-block img-user img-large"
      .user-details
        %h3.text-center= @workshop.provider.first_name
.row
  .col-md-12
    .workshop-description
      = @workshop.description
.row
  .col-md-8
    .workshop-comments
      %ul
        = render partial: 'workshops/comment', collection: @workshop.comments
  .col-md-4
    .workshop-venue
