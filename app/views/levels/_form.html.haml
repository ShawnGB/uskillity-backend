= form_for @level do |f|
  - if @level.errors.any?
    #error_explanation
      %h2= "#{pluralize(@level.errors.count, "error")} prohibited this level from being saved:"
      %ul
        - @level.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name_translations
    = f.text_field :name_translations
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :is_active
    = f.check_box :is_active
  .actions
    = f.submit 'Save'
