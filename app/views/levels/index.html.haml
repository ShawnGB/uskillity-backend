%h1 Listing levels

%table
  %thead
    %tr
      %th Name translations
      %th Value
      %th Is active
      %th
      %th
      %th

  %tbody
    - @levels.each do |level|
      %tr
        %td= level.name_translations
        %td= level.value
        %td= level.is_active
        %td= link_to 'Show', level
        %td= link_to 'Edit', edit_level_path(level)
        %td= link_to 'Destroy', level, :method => :delete, :data => { :confirm => 'Are you sure?' }

