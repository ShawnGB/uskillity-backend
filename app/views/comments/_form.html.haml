= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :commenter
    = f.text_field :commenter
  .field
    = f.label :lang
    = f.number_field :lang
  .field
    = f.label :commented_object
    = f.text_field :commented_object
  .actions
    = f.submit 'Save'
