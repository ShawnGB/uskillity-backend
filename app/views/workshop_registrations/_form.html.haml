= form_for @workshop_registration do |f|
  - if @workshop_registration.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workshop_registration.errors.count, "error")} prohibited this workshop_registration from being saved:"
      %ul
        - @workshop_registration.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :workshop
    = f.text_field :workshop
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :booking
    = f.text_field :booking
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
