= form_for @participation do |f|
  - if @participation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@participation.errors.count, "error")} prohibited this participation from being saved:"
      %ul
        - @participation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :workshop_session
    = f.text_field :workshop_session
  .field
    = f.label :workshop_registration
    = f.text_field :workshop_registration
  .field
    = f.label :score
    = f.text_field :score
  .actions
    = f.submit 'Save'
